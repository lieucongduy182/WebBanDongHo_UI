{
  "extends": ["next", "prettier"],
  "plugins": ["prettier", "simple-import-sort"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "react-hooks/exhaustive-deps": 0,
    "no-unused-vars": "warn",
    "prefer-const": "off"
  }
}
